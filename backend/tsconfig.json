{
  "compilerOptions": {
    /* -------------------
     * COMPILACIÓN GENERAL
     * ------------------- */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "removeComments": true,

    /* -------------------
     * ERRORES Y CONTROL
     * ------------------- */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,          // <- útil si estás migrando desde JS
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* -------------------
     * COMPATIBILIDAD MODERNA
     * ------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,       // <- te permite importar JSONs como el de cloudsql.json
    "isolatedModules": true,         // <- mejor para herramientas tipo ts-node o jest
    "typeRoots": ["./node_modules/@types"],

    /* -------------------
     * ALIAS (opcional)
     * ------------------- */
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
